<!-- Loop over each blogPost object -->
{{#each blogPosts as |blogPost| }}
<div class="row align-center mb-5">
  <div class="col-md-6">
    <!-- Render blogPost-specific data with Handlebars.js expressions -->
    <h2>{{blogPost.title}}</h2>
  </div>
  <div class="col-md-6">
    <h3>{{blogPost.content}}</h3>
  </div>
</div>
{{/each}}
